{
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
  ],
  "eslint.options": {
    "extensions": [".ts", ".tsx", ".js"],
  },
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "sameLine",
  }
}